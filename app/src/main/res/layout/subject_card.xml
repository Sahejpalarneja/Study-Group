<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:background="@color/orange">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/SubjectNameLayout"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
        <!--text view for our course name-->
            <TextView
                android:id="@+id/SubjectNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/Subject"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvSubjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <!--text view for our course description-->
        <LinearLayout
            android:id="@+id/SubjectCodeLayout"
            android:layout_width="match_parent"
            android:layout_below="@id/SubjectNameLayout"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/SubjectCodeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/Subject_code"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvSubjectCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="5dp"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ProfessorLayout"
            android:layout_width="match_parent"
            android:layout_below="@id/SubjectCodeLayout"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ProfessorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/Professor"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvProfessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/MemberLayout"
            android:layout_width="match_parent"
            android:layout_below="@id/ProfessorLayout"
            android:layout_height="20dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/MembersLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/Members"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tvMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="5dp"

            android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>