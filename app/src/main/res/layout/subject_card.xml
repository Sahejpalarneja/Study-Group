<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/orange"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/SubjectNameLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <!--text view for our course name-->

            <TextView
                android:id="@+id/tvSubjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <!--text view for our course description-->
        <LinearLayout
            android:id="@+id/SubjectCodeLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/SubjectNameLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSubjectCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ProfessorLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/SubjectCodeLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProfessor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MemberLayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/ProfessorLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MembersLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:text="@string/Members"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop = "5dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>